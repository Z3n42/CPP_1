#ifndef EASYFIND_HPP
# define EASYFIND_HPP

#include <iostream>
#include <vector>
#include <algorithm>

template<typename T>
int easyfind(std::vector<T>vec, T x){
	
	typename std::vector<T>::iterator it;

	it = std::find(vec.begin(), vec.end(), x);
	if (it != vec.end()){
		std::cout << "Element " << x <<
					 " found at position : ";
		std::cout << it - vec.begin() + 1 << std::endl;
	  }
   	else
		throw ("kkkkk");
	return (0);
}


#endif
